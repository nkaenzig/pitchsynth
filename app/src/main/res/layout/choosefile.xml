<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/disk"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.work.synthesizer.Mainactivity" >
    
    <Button android:text="Browse"
	     android:id="@+id/chooseFileBrowser" 
	     android:textSize="18dp"
	     android:layout_marginTop="20dp" 
	     android:layout_height="wrap_content" 
	     android:layout_width="fill_parent" 
	     android:onClick="getfile" />
    
    <Button
        android:id="@+id/importFiles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/chooseFileBrowser"
        android:layout_marginTop="10dp"
        android:text="Import"
        android:onClick="getfileimport"   />
    
    <Button
        android:id="@+id/deleteFiles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/importFiles"
        android:layout_marginTop="10dp"
        android:text="Delete"
        android:onClick="getfiledelete"   />
    
    <Button
        android:id="@+id/playerToMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/deleteFiles"
        android:layout_marginTop="10dp"
        android:text="Back" />

</RelativeLayout>